package net.minecraft.src.wifiremote;

import net.minecraft.src.EntityPlayer;
import net.minecraft.src.Item;
import net.minecraft.src.ItemStack;
import net.minecraft.src.ModLoader;
import net.minecraft.src.PlayerController;
import net.minecraft.src.World;
import net.minecraft.src.mod_WirelessRemote;
import net.minecraft.src.wifi.RedstoneEther;
import net.minecraft.src.wifi.RedstoneEtherNode;

public class ItemRedstoneWirelessRemote extends Item {
	private String tempx, tempy,tempz;
	protected ItemRedstoneWirelessRemote(int i) {
		super(i);
		maxStackSize = 1;
		setMaxDamage(64);
		tempx = "";
		tempy = "";
		tempz = "";
	}
	
	@Override
	public boolean onItemUse(ItemStack itemstack, EntityPlayer entityplayer, World world, int i, int j, int k, int l) {
		if (tempx == "") tempx = String.valueOf((int)entityplayer.posX);
		if (tempy == "") tempy = String.valueOf((int)entityplayer.posY);
		if (tempz == "") tempz = String.valueOf((int)entityplayer.posZ);
		ModLoader.getMinecraftInstance().thePlayer.addChatMessage("Clicked x: " + tempx + "y: " + tempy + "z: " + tempz);
		if (entityplayer.isSneaking()) {
			ModLoader.openGUI(entityplayer, new GuiRedstoneWirelessRemote(itemstack, world, entityplayer, i,j,k));
			if ( WirelessRemote.duraTogg )
				itemstack.damageItem(1, entityplayer);
			return true;
		}
		else {
			String freq = MemRedstoneWirelessRemote.getInstance(world).getFreq(itemstack.hashCode());
			RedstoneEther.getInstance().addTransmitter(world, Integer.parseInt(tempx), Integer.parseInt(tempy), Integer.parseInt(tempz), freq);
	    	RedstoneEther.getInstance().setTransmitterState(world, Integer.parseInt(tempx), Integer.parseInt(tempy), Integer.parseInt(tempz), freq, true);
/*			ThreadWirelessRemote.pulse(
				entityplayer,
				world);*/
		}
		return false;
	}
	
	@Override
    public void onPlayerStoppedUsing(ItemStack par1ItemStack, World par2World, EntityPlayer par3EntityPlayer, int par4) {
		ModLoader.getMinecraftInstance().thePlayer.addChatMessage("UnClicked x: " + tempx + "y: " + tempy + "z: " + tempz);
		String freq = MemRedstoneWirelessRemote.getInstance(par2World).getFreq(par1ItemStack.hashCode());
		RedstoneEther.getInstance().remTransmitter(par2World, Integer.parseInt(tempx), Integer.parseInt(tempy), Integer.parseInt(tempz), freq);
		tempx = "";
		tempy = "";
		tempz = "";
		super.onPlayerStoppedUsing(par1ItemStack, par2World, par3EntityPlayer, par4);
	}
    
	@Override
	public ItemStack onItemRightClick(ItemStack itemstack, World world, EntityPlayer entityplayer) {
		onItemUse(
				itemstack, 
				entityplayer,
				world, 
				(int)Math.round(entityplayer.posX),
				(int)Math.round(entityplayer.posY), 
				(int)Math.round(entityplayer.posZ), 
				0
		);
		return itemstack;
	}
	@Override
	public boolean isFull3D() {
		return true;
	}
}
